---
import {
  DockerLogo,
  FigmaLogo,
  GoLogo,
  NextjsLogo,
  NodejsLogo,
  PostgreSQLLogo,
  ReactLogo,
  TailwindLogo,
  TypescriptLogo,
} from '@/components/icons/brand-icons';

const primaryStack = [
  { name: 'React', icon: ReactLogo },
  { name: 'Next.js', icon: NextjsLogo },
  { name: 'TypeScript', icon: TypescriptLogo },
  { name: 'Tailwind', icon: TailwindLogo },
  { name: 'Node.js', icon: NodejsLogo },
];

const secondaryStack = [
  { name: 'Go', icon: GoLogo },
  { name: 'PostgreSQL', icon: PostgreSQLLogo },
  { name: 'Docker', icon: DockerLogo },
  { name: 'Figma', icon: FigmaLogo },
];

const otherTools = ['Prisma', 'Supabase', 'Vercel', 'Git', 'Linux'];
---

<section data-section="skills" class="pt-20 lg:pt-32">
  <h2 class="text-2xl font-semibold tracking-tight text-foreground md:text-3xl font-heading">
    Stack
  </h2>

  <div class="mt-10 space-y-8">
    <!-- Primary Stack -->
    <div>
      <p class="text-sm font-medium text-foreground mb-4">What I reach for most</p>
      <div class="flex flex-wrap gap-x-6 gap-y-4">
        {primaryStack.map((skill) => (
          <div class="group flex items-center gap-2.5 rounded-lg border border-border bg-card/50 px-4 py-2.5 transition-all duration-200 hover:border-border/80 hover:bg-accent/50 hover:scale-[1.02]">
            <skill.icon className="h-5 w-5 text-muted-foreground transition-colors group-hover:text-foreground" />
            <span class="text-sm text-muted-foreground transition-colors group-hover:text-foreground">
              {skill.name}
            </span>
          </div>
        ))}
      </div>
    </div>

    <!-- Secondary Stack -->
    <div>
      <p class="text-sm font-medium text-foreground mb-4">Also in my toolkit</p>
      <div class="flex flex-wrap gap-x-6 gap-y-4">
        {secondaryStack.map((skill) => (
          <div class="group flex items-center gap-2.5 rounded-lg border border-transparent px-4 py-2.5 transition-all duration-200 hover:border-border hover:bg-accent/30 hover:scale-[1.02]">
            <skill.icon className="h-5 w-5 text-muted-foreground transition-colors group-hover:text-foreground" />
            <span class="text-sm text-muted-foreground transition-colors group-hover:text-foreground">
              {skill.name}
            </span>
          </div>
        ))}
      </div>
    </div>

    <!-- Other Tools -->
    <p class="text-sm text-muted-foreground pt-2">
      {otherTools.join(' Â· ')}
    </p>
  </div>
</section>
