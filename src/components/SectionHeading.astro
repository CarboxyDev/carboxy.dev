---
import { cn } from '@/lib/utils';

interface Props {
  title: string;
  className?: string;
}

const { title, className } = Astro.props;
---

<div class="relative mb-16 flex flex-col items-center">
  <div class={cn('section-heading relative text-center', className)}>
    <h2
      class="text-3xl font-semibold tracking-tight text-zinc-100 md:text-5xl font-heading"
    >
      {title}
    </h2>

    <div
      class="section-heading-line mx-auto mt-4 h-px w-20 bg-gradient-to-r from-transparent via-primary-400 to-transparent"
    />
  </div>
</div>

<style>
  .section-heading {
    opacity: 0;
    animation: fade-in-up 0.6s ease-out 0.1s forwards;
  }

  .section-heading-line {
    transform: scaleX(0);
    animation: scale-x 0.8s ease-out 0.3s forwards;
  }

  @keyframes scale-x {
    from {
      transform: scaleX(0);
    }
    to {
      transform: scaleX(1);
    }
  }
</style>
