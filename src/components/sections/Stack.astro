---
import {
  DockerLogo,
  ExpressjsLogo,
  FigmaLogo,
  GoLogo,
  NextjsLogo,
  NodejsLogo,
  PostgreSQLLogo,
  ReactLogo,
  TailwindLogo,
  TypescriptLogo,
  FastifyLogo,
} from '@/components/icons/brand-icons';

const stack = [
  { name: 'TypeScript', icon: TypescriptLogo },
  { name: 'React', icon: ReactLogo },
  { name: 'Next.js', icon: NextjsLogo },
  { name: 'Tailwind', icon: TailwindLogo },
  { name: 'Node.js', icon: NodejsLogo },
  { name: 'Fastify', icon: FastifyLogo },
  { name: 'Express.js', icon: ExpressjsLogo },
  { name: 'PostgreSQL', icon: PostgreSQLLogo },
  { name: 'Go', icon: GoLogo },
  { name: 'Docker', icon: DockerLogo },
];

---

<section data-section="skills" class="pt-20 lg:pt-32">
  <h2 class="text-2xl font-semibold tracking-tight text-foreground md:text-3xl font-heading">
    Stack
  </h2>

  <div class="mt-8 space-y-10">
    <div class="grid grid-cols-3 gap-4 sm:grid-cols-4 md:grid-cols-5">
      {stack.map((item) => (
        <div class="group flex flex-col items-center gap-2 py-3 transition-colors">
          <item.icon className="size-8 transition-colors duration-200 group-hover:text-foreground" />
          <span class="text-xs text-muted-foreground transition-colors duration-200 group-hover:text-foreground">
            {item.name}
          </span>
        </div>
      ))}
    </div>

    <p class="text-sm text-muted-foreground">
      *Along with several other tools and frameworks
    </p>
  </div>
</section>
