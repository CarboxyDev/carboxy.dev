---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Hero } from "@/components/sections/Hero";
import { Projects } from "@/components/sections/Projects";
import { About } from "@/components/sections/About";
import { Skills } from "@/components/sections/Skills";
import { Contact } from "@/components/sections/Contact";
import { Footer } from "@/components/sections/Footer";
---

<BaseLayout title="CarboxyDev">
  <main class="mx-auto flex max-w-screen-2xl flex-col px-6 py-16 sm:px-24 md:px-32 lg:px-52 xl:px-36">
    <section
      class="animate-fade-in-up min-h-[80vh] pt-8 lg:pt-16 2xl:pt-28"
      style="animation-delay: 0.2s; animation-fill-mode: both;"
    >
      <Hero client:load />
    </section>

    <section
      class="animate-fade-in-up"
      style="animation-delay: 0.4s; animation-fill-mode: both;"
    >
      <Projects client:visible />
    </section>

    <section
      class="animate-fade-in-up"
      style="animation-delay: 0.6s; animation-fill-mode: both;"
    >
      <About client:visible />
    </section>

    <section
      class="animate-fade-in-up mt-20"
      style="animation-delay: 0.8s; animation-fill-mode: both;"
    >
      <Skills client:visible />
    </section>

    <section
      class="animate-fade-in-up mt-20"
      style="animation-delay: 1.0s; animation-fill-mode: both;"
    >
      <Contact client:load />
    </section>

    <section
      class="animate-fade-in-up mt-20 lg:mt-40"
      style="animation-delay: 1.2s; animation-fill-mode: both;"
    >
      <Footer client:load />
    </section>
  </main>
</BaseLayout>
