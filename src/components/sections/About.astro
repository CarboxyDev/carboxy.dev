---
import { JourneyTimeline } from '@/components/react/JourneyTimeline';
import SectionHeading from '@/components/SectionHeading.astro';
import SkillsList from '@/components/SkillsList.astro';
import { cn } from '@/lib/utils';
import { Code2, MapPin } from 'lucide-react';
---

<section
  class={cn('pb-32 pt-20 lg:pb-40 lg:pt-32')}
  data-section="about"
>
  <div class="space-y-16">
    <SectionHeading title="About Me" />

    <div class="mx-auto max-w-4xl">
      <div class="space-y-12">
        <div class="about-cards-grid grid gap-6 md:auto-rows-min md:grid-cols-2 md:grid-rows-[auto_auto_auto] lg:gap-8">
          <!-- What I Do Card -->
          <div
            class="about-card group rounded-xl border border-zinc-800/60 bg-gradient-to-br from-zinc-900/40 to-zinc-900/20 p-6 shadow-lg backdrop-blur-sm transition-all duration-300 hover:border-zinc-700/80 hover:bg-gradient-to-br hover:from-zinc-900/50 hover:to-zinc-900/30 hover:shadow-xl hover:shadow-primary-400/5 md:row-span-2"
          >
            <div class="mb-6">
              <h3 class="flex items-center gap-3 bg-gradient-to-r from-white to-zinc-300 bg-clip-text text-xl font-bold text-transparent transition-all duration-300 group-hover:from-white group-hover:to-primary-200">
                <div class="rounded-lg border border-primary-400/30 bg-gradient-to-br from-primary-400/20 to-primary-500/10 p-2 transition-all duration-300 group-hover:border-primary-400/50 group-hover:from-primary-400/30 group-hover:to-primary-500/20">
                  <Code2 className="h-5 w-5 text-primary-400" />
                </div>
                What I Do
              </h3>
            </div>
            <SkillsList />
          </div>

          <!-- My Journey Card -->
          <div
            class="about-card group rounded-xl border border-zinc-800/60 bg-gradient-to-br from-zinc-900/40 to-zinc-900/20 p-6 shadow-lg backdrop-blur-sm transition-all duration-300 hover:border-zinc-700/80 hover:bg-gradient-to-br hover:from-zinc-900/50 hover:to-zinc-900/30 hover:shadow-xl hover:shadow-primary-400/5 md:row-span-2"
          >
            <div class="mb-6">
              <h3 class="flex items-center gap-3 bg-gradient-to-r from-white to-zinc-300 bg-clip-text text-xl font-bold text-transparent transition-all duration-300 group-hover:from-white group-hover:to-primary-200">
                <div class="rounded-lg border border-primary-400/30 bg-gradient-to-br from-primary-400/20 to-primary-500/10 p-2 transition-all duration-300 group-hover:border-primary-400/50 group-hover:from-primary-400/30 group-hover:to-primary-500/20">
                  <MapPin className="h-5 w-5 text-primary-400" />
                </div>
                My Journey
              </h3>
            </div>
            <JourneyTimeline client:visible />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Dim non-hovered cards when any card is hovered */
  .about-cards-grid:has(.about-card:hover) .about-card:not(:hover) {
    opacity: 0.5;
    filter: blur(2px);
  }
</style>
