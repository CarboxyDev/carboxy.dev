---
interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<div
  class:list={[
    'pointer-events-none absolute inset-0 flex items-center justify-center',
    className
  ]}
>
  <div class="h-[600px] w-[600px] rounded-full bg-linear-to-r from-blue-500/20 via-indigo-500/20 to-cyan-500/20 opacity-40 blur-[120px]" />
</div>
