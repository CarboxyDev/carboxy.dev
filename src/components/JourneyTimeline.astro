    }
    60% {
      background: linear-gradient(to bottom, rgba(167, 139, 250, 0) 60%, rgba(167, 139, 250, 0.6) 63%, rgba(167, 139, 250, 0) 68%);
    }
    70% {
      background: linear-gradient(to bottom, rgba(167, 139, 250, 0) 70%, rgba(167, 139, 250, 0.6) 73%, rgba(167, 139, 250, 0) 78%);
    }
    80% {
      background: linear-gradient(to bottom, rgba(167, 139, 250, 0) 80%, rgba(167, 139, 250, 0.6) 83%, rgba(167, 139, 250, 0) 88%);
    }
    90% {
      background: linear-gradient(to bottom, rgba(167, 139, 250, 0) 90%, rgba(167, 139, 250, 0.6) 93%, rgba(167, 139, 250, 0) 98%);
    }
    100% {
      background: linear-gradient(to bottom, rgba(167, 139, 250, 0) 100%, rgba(167, 139, 250, 0.6) 103%, rgba(167, 139, 250, 0) 108%);
    }
  }

  .timeline-glow {
    animation: timeline-glow 6s linear infinite;
  }
</style>
